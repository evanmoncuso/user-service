{
  "name": "ts-starter",
  "version": "1.0.0",
  "description": "A Typescript starter pack for node projects",
  "main": "index.js",
  "author": "Evan Moncuso",
  "license": "MIT",
  "keywords": [
    "node",
    "typescript",
    "express"
  ],
  "scripts": {
    "build": "tsc",
    "build:dev": "tsc -w",
    "develop": "source .private/local.sh && concurrently \"yarn run build:dev\" \"yarn run start:dev\"",
    "start": "node app.js",
    "start:dev": "nodemon dist/app.js",
    "test": "yarn run test:lint && yarn run test:jest",
    "test:jest": "jest",
    "test:lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test:watch": "jest -w"
  },
  "dependencies": {
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-typescript": "^7.9.0",
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "~1.19.0",
    "@types/cors": "~2.8.6",
    "@types/express": "~4.17.3",
    "@types/jest": "^25.1.4",
    "@types/node": "~13.9.0",
    "concurrently": "^5.1.0",
    "jest": "^25.2.4",
    "nodemon": "~2.0.2",
    "tslint": "^6.1.0",
    "typescript": "^3.8.3"
  },
  "engines": {
    "node": ">=10.16.x"
  }
}
